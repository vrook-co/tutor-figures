---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: lms-worker-beat
  labels:
    app.kubernetes.io/name: lms-worker-beat
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: lms-worker-beat
  template:
    metadata:
      labels:
        app.kubernetes.io/name: lms-worker-beat
    spec:
      containers:
        - name: lms-worker-beat
          image: {{ DOCKER_IMAGE_OPENEDX }}
          args: ["./manage.py", "lms", "celery", "beat", "--loglevel=info"]
          env:
          - name: SERVICE_VARIANT
            value: lms
          - name: C_FORCE_ROOT
            value: "1"
          volumeMounts:
            - mountPath: /openedx/edx-platform/lms/envs/tutor/
              name: settings-lms
            - mountPath: /openedx/edx-platform/cms/envs/tutor/
              name: settings-cms
            - mountPath: /openedx/config
              name: config
      volumes:
        - name: settings-lms
          configMap:
            name: openedx-settings-lms
        - name: settings-cms
          configMap:
            name: openedx-settings-cms
        - name: config
          configMap:
            name: openedx-config
